<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    android:weightSum="1136"
    tools:context="com.budly.android.CustomerApp.user.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="100"
        android:weightSum="640" >

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="440"
            android:padding="8dip"
            android:scaleType="fitCenter"
            android:src="@drawable/budly_logo2" />

        <ImageView
            android:id="@+id/btn_rigt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1036"
        android:orientation="horizontal"
        android:weightSum="640" >

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="30" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="580"
            android:orientation="vertical"
            android:weightSum="1036" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter your doctor reommendation"
                android:id="@+id/textView17"
                android:textSize="18dp"
                android:textColor="@color/abs__primary_text_holo_dark"
                android:paddingBottom="20dp"
                android:textAlignment="gravity"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/txt_recomendation"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="75"
                android:background="@drawable/bg_white_rounded"
                android:hint="Prescription #"
                android:imeOptions="actionNext"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:inputType="text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="20" />

            <EditText
                android:id="@+id/txt_expiry"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="75"
                android:background="@drawable/bg_white_rounded"
                android:hint="Rec Expiry date"
                android:imeOptions="actionNext"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:clickable="true"
                android:editable="false"
                android:inputType="none" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="20" />

            <EditText
                android:id="@+id/txt_doc_name"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="75"
                android:background="@drawable/bg_white_rounded"
                android:hint="Doctors Name"
                android:imeOptions="actionNext"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="20" />

            <EditText
                android:id="@+id/txt_doc_web"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="75"
                android:background="@drawable/bg_white_rounded"
                android:hint="Doctors Website"
                android:imeOptions="actionNext"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="20" />

            <EditText
                android:id="@+id/txt_phone"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="75"
                android:background="@drawable/bg_white_rounded"
                android:hint="Clinic Phone Number"
                android:imeOptions="actionNext"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:inputType="phone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="20" />

            <EditText
                android:id="@+id/txt_number"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="75"
                android:background="@drawable/bg_white_rounded"
                android:editable="false"
                android:focusable="false"
                android:hint="#number"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:visibility="invisible" />

        </LinearLayout>

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="30" />
    </LinearLayout>

</LinearLayout>