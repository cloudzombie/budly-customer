<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    android:weightSum="1136"
    tools:context="com.budly.android.CustomerApp.user.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="100"
        android:weightSum="640" >

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="440"
            android:padding="8dip"
            android:scaleType="fitCenter"
            android:src="@drawable/budly_logo2" />

        <ImageView
            android:id="@+id/btn_rigt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1036"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="1036" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="180"
            android:background="#aaf1f0ec"
            android:orientation="vertical"
            android:padding="5dip"
            android:weightSum="2" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="Available Drivers"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:gravity="center"
                android:maxLines="2"
                android:text="We suggest to wait 30 to 60 secs\nfor all drivers to respond" />
        </LinearLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="616"
            android:background="#ffffff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#aaf1f0ec"
            android:layout_weight="100" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="111"
            android:orientation="horizontal"
            android:background="#aaf1f0ec"
            android:weightSum="640" >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="120" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="400"
                android:scaleType="fitCenter"
                android:text="Choose another shop"
                android:textColor="#ffffff"
                android:background="@drawable/btn_bg_nau_white" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="120" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#aaf1f0ec"
            android:layout_weight="29" />
    </LinearLayout>

</LinearLayout>