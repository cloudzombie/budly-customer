<resources>

    <style name="Theme.Budly" parent="@style/Theme.Sherlock.Light.DarkActionBar"></style>

    <style name="Theme.Budly.FullScreen" parent="@style/Theme.Sherlock.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Budly.NoActionBar" parent="@style/Theme.Sherlock.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Budly.Overlay" parent="@style/Theme.Sherlock.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!-- item name="android:windowFullscreen">true</item -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ProgressButton" />

    <!-- Base theme for the Progress button. -->
    <style name="ProgressButton.Pin">
        <item name="progress">0</item>
        <item name="max">100</item>
        <item name="circleColor">@color/progress_default_circle_color</item>
        <item name="progressColor">@color/progress_default_progress_color</item>
        <item name="pinnedDrawable">@drawable/transparent</item>
        <item name="unpinnedDrawable">@drawable/transparent</item>
        <item name="shadowDrawable">@drawable/transparent</item>
        <item name="innerSize">@dimen/progress_inner_size</item>
        <item name="pinned">false</item>
        <item name="animating">false</item>
        <item name="animationSpeed">1</item>
        <item name="animationDelay">50</item>
        <item name="animationStripWidth">6</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <!-- Base theme for the Progress button. -->
    <style name="ProgressButton.Pin.Compat">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>

</resources>