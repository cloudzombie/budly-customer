<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    android:weightSum="1136"
    tools:context="com.budly.android.CustomerApp.driver.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="100"
        android:weightSum="640" >

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:background="@drawable/bg_overlay"
            android:padding="8dip"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="440"
            android:padding="8dip"
            android:scaleType="fitCenter"
            android:src="@drawable/budly_logo2" />

        <ImageView
            android:id="@+id/btn_rigt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1036"
        android:orientation="horizontal"
        android:weightSum="640" >

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="34" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="572"
            android:orientation="vertical"
            android:weightSum="1036" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="20" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="100"
                android:gravity="center"
                android:text="Report a problem"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="40" />

            <CheckBox
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Can not verify customer" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="80" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:gravity="center"
                android:text="Details of problem"
                android:textColor="#ffffff"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/txt_problem"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="500"
                android:background="@drawable/bg_white_rounded" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="80" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="75"
                android:background="@drawable/btn_bg_gray"
                android:text="Submit"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="85" />
        </LinearLayout>

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="34" />
    </LinearLayout>

</LinearLayout>