<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="horizontal"
    android:weightSum="640"
    tools:context="com.budly.android.CustomerApp.driver.MainActivity" >

    <View
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="112" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="416"
        android:orientation="vertical"
        android:weightSum="1136" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="40" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="134"
            android:src="@drawable/budly_logo1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="182" />

        <ImageView
            android:id="@+id/btn_place_an_order"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="111"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_place_an_order" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="347" />

        <ImageView
            android:id="@+id/btn_i_am_a_driver"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="111"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_i_am_a_driver" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="211" />
    </LinearLayout>

    <View
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="112" />

</LinearLayout>