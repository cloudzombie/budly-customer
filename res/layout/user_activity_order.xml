<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    android:weightSum="1136"
    tools:context="com.budly.android.CustomerApp.user.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="100"
        android:weightSum="640" >

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:background="@drawable/bg_overlay"
            android:padding="8dip"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="440"
            android:padding="8dip"
            android:scaleType="fitCenter"
            android:src="@drawable/budly_logo2" />

        <ImageView
            android:id="@+id/btn_rigt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="788"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="788" >

        <RelativeLayout
            android:id="@+id/service_item_layout"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="170"
            android:orientation="horizontal"
            android:paddingBottom="2dip"
            android:paddingTop="2dip" >

            <ImageView
                android:id="@+id/thumb"
                android:layout_width="94dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="5dip"
                android:src="@drawable/thumb1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dip"
                android:layout_toLeftOf="@+id/ic_check"
                android:layout_toRightOf="@+id/thumb"
                android:gravity="center_vertical|left"
                android:orientation="vertical"
                android:paddingBottom="5dip"
                android:paddingTop="5dip" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:text="Romance"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rate_start_demo" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_mile"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:gravity="right|top"
                android:paddingRight="8dip"
                android:paddingTop="16dip"
                android:text="12 Miles" />
        </RelativeLayout>

       <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="75"
            android:background="@color/main_bg" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Your Order"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </FrameLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="543"
            android:background="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="248"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="248" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="25" />

        <Button
            android:id="@+id/btn_add_more"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="76"
            android:background="@drawable/btn_bg_blue_white"
            android:text="Add more items to order"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="46" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="76"
            android:background="@drawable/btn_bg_green_white"
            android:text="Complete Order: \t$28.00"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="25" />
    </LinearLayout>

</LinearLayout>