<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/main_bg"
        android:orientation="horizontal"
        android:weightSum="640.0" >

        <View
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="112.0" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="416.0"
            android:orientation="vertical"
            android:weightSum="1136.0" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="40.0" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="134.0"
                android:src="@drawable/budly_logo1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="182.0" />

            <ImageView
                android:id="@+id/btn_customer"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="111.0"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_customer" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="347.0" />

            <ImageView
                android:id="@+id/btn_i_am_a_driver"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="111.0"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_i_am_a_driver" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="211.0" />
        </LinearLayout>

        <View
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="112.0" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>