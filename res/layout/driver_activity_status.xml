<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    android:weightSum="1136.0" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="100.0"
        android:weightSum="640.0" >

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="100.0"
            android:background="@drawable/bg_overlay"
            android:padding="8.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu" />

        <ImageView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="440.0"
            android:padding="8.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/budly_logo2" />

        <ImageView
            android:id="@+id/btn_rigt"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="100.0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="134.0"
        android:background="#ffffffff"
        android:orientation="horizontal"
        android:weightSum="640.0" >

        <TextView
            android:id="@+id/txt_first_name"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="160.0"
            android:gravity="center"
            android:text="Mike"
            android:textSize="24.0sp" />

        <ImageView
            android:id="@+id/rate"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="320.0"
            android:padding="10.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/star0" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="160.0"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/time_on_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87%"
                android:textSize="24.0sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On time rank"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="902.0"
        android:orientation="horizontal"
        android:weightSum="640.0" >

        <View
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="34.0" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="572.0"
            android:orientation="vertical"
            android:weightSum="902.0" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="160.0" />

            <ImageView
                android:id="@+id/btn_i_am_unavailable"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="75.0"
                android:src="@drawable/btn_i_am_unavailable" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="160.0" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="60.0"
                android:gravity="center"
                android:text="Active and Waiting "
                android:textColor="#ffffffff"
                android:textSize="20.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="160.0" />

            <ImageView
                android:id="@+id/btn_i_am_available"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="75.0"
                android:src="@drawable/btn_i_am_available" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="212.0" />
        </LinearLayout>

        <View
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="34.0" />
    </LinearLayout>

</LinearLayout>